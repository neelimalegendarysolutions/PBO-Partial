<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Jpetto__Start_Date__c</field>
        <field>Jpetto__End_Date__c</field>
        <field>Jpetto__User__c</field>
        <field>Jpetto__Hours_Logged_Billable__c</field>
        <field>Jpetto__Hours_Logged_Total__c</field>
        <field>Jpetto__Submission_Comments__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>chad@legendarysolutions.io</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Primary Approver</label>
        <name>Primary_Approver</name>
    </approvalStep>
    <emailTemplate>Jpetto__Sharable_Folder/Jpetto__TimeSheet_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Email_after_Timesheet_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_after_Timesheet_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_to_Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Timesheet Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_to_Overdue</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
